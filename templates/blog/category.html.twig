{# templates/blog/category.html.twig #}
{% extends "base.html.twig" %}

{% block title %}{{ categoryName }}{% endblock %}

{% block body %}
    <div>
        <h1>{{ categoryName }}</h1>

        {% if articles is defined %}

            {% for article in articles %}
                <h3>{{ article.id ~ '. ' ~ article.title }}</h3>
                <p>{{ article.content }}</p>

            {% endfor %}

        {% else %}
            <p>No article for this category.</p>

        {% endif %}

    </div>

{% endblock %}
